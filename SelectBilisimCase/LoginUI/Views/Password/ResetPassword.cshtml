@model ResetPasswordViewModel;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>

    <div class="form">
        <header>Şifremi Unuttum</header>
        <form method="post">

            <span asp-validation-for="Password" class="text-danger"></span>
            <input type="password" asp-for="Password" placeholder="Parolanız">

            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <input type="password" asp-for="ConfirmPassword" placeholder="Parola Tekrarı">
      
            <input type="submit" class="button" value="Şifreyi Sıfırla">
        </form>
    </div>
</body>
</html>
